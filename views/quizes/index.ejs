<table>
  <tr>
    <td>
      <form method="get" action="/quizes/search">
        <label for="texto_a_buscar">Pregunta a buscar:</label>
        <input type="text" id="texto_a_buscar" name="texto_a_buscar" value="" placeholder="escriba texto a buscar">
        <input type="submit" value="Enviar">
      </form>
    </td>
  </tr>
    <% var i; for(i=0; i < quizes.length; i++){ %>
  <tr>
    <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
    <td><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar pregunta</button></a></td>
    <td>
      <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
        <button type="submit" onClick="return confim('Borrar: <%= quizes[i].pregunta %>');">Borrar pregunta</button>
      </form>
    </td>
  </tr>
  <% } %>
</table>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
